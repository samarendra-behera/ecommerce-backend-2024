{
  "version": 2,
  "builds": [
    {
      "src": "dist/app.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/upload",
      "methods": ["POST"],
      "dest": "dist/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/app.js",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH",
        "OPTIONS"
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/uploads/(.*)",
      "destination": "/uploads/$1"
    }
  ],
  "outputDirectory": "uploads",
  "trailingSlash": false
}
